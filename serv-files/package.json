{
  "name": "novotomilino-api",
  "version": "1.0.0",
  "description": "novotomilino-api",
  "author": "mlyapunov",
  "license": "MIT",
  "scripts": {
    "build:prod": "rimraf dist && cpx yarn.lock dist && cpx package.json dist && npm run webpack",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:test": "BASE_NAME=dev_oblaka npm run start",
    "start": "ts-node -r tsconfig-paths/register serv-modules/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server.js",
    "start:hmr:test": "BASE_NAME=dev_oblaka node dist/server.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nguniversal/express-engine": "^7.1.1",
    "@angular/animations": "^7.2.0",
    "@angular/common": "^7.2.0",
    "@angular/core": "^7.2.0",
    "@angular/http": "^7.2.0",
    "@angular/platform-browser": "^7.2.0",
    "@angular/platform-browser-dynamic": "^7.2.0",
    "@angular/platform-server": "^7.2.0",
    "@angular/compiler": "^7.2.0",
    "@types/mongoose": "^5.3.26",
    "JSONStream": "^1.3.5",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "connect-multiparty": "^2.2.0",
    "cron": "^1.7.1",
    "dateformat": "^3.0.3",
    "express-session": "^1.17.0",
    "file-exists": "^5.0.1",
    "gm": "^1.23.1",
    "html-pdf": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mobile-detect": "^1.4.3",
    "mongoose": "^5.5.1",
    "nodemailer": "^6.1.1",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "rxjs": "^6.2.2",
    "rxjs-compat": "^6.5.2",
    "typescript": "^3.0.1",
    "write": "^1.0.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "cpx": "^1.5.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
