{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "baseUrl": "./serv-modules"
    },
    "include": [
        "serv-modules/**/*",
//        "./../node_modules/angular2-http-file-upload/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "previous/**/*.ts"
    ]
}
